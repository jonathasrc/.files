    added = yellow
    changed = green
    untracked = cyan

[push]
    default = matching
    
[pull]
    rebase = true
[init]
	defaultBranch = main
  
[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
